{% extends ':default:layout.html.twig' %}
{% block private_css %}

{% endblock %}
{% block content %}
        <div class="page-header">
            <h1>
                分组情况
                <small>
                    <i class="icon-double-angle-right"></i>
                    各分组情况
                </small>
            </h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">

                    <table class="table table-striped table-bordered table-hover" id="general_distribution">
                        <thead>
                        <tr>
                            <th>MID</th>
                            <th>服务组</th>
                            <th>客户数量</th>
                            <th>客户可用金额合计</th>
                            <th>客户财产合计</th>
                            <th>客户列表操作</th>
                            <th>客户投资列表操作</th>
                            <th>客户回款列表操作</th>
                            <th>服务组回访列表操作</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for single_data in data %}
                        <tr>
                            <td>{{ single_data.mid }}</td>
                            <td>{{ single_data.name }}</td>
                            <td>{{ single_data.client_number }}</td>
                            <td>￥{{ single_data.available_balance }}</td>
                            <td>￥{{ single_data.total_capital }}</td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/Detail?MID=0" class="btn btn-xs btn-danger">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/InvestDetail?MID=0" class="btn btn-xs btn-success">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/BackMoneyDetail?MID=0" class="btn btn-xs btn-info">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/VisitListDetail?MID=0" class="btn btn-xs btn-warning">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                        </tr>
                            {% endfor %}
                        <tr>
                            <td></td>
                            <td>{{ undistributed_data.name }}</td>
                            <td>{{ undistributed_data.client_number }}</td>
                            <td>￥{{ undistributed_data.available_balance }}</td>
                            <td>￥{{ undistributed_data.total_capital }}</td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/Detail?MID=0" class="btn btn-xs btn-danger">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/InvestDetail?MID=0" class="btn btn-xs btn-success">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/BackMoneyDetail?MID=0" class="btn btn-xs btn-info">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>
                            <td><a href="http://crm.mgt.jili3623.com:8181/DistributionCustomer/VisitListDetail?MID=0" class="btn btn-xs btn-warning">详细信息<i class="icon-arrow-right icon-on-right"></i></a></td>

                        </tr>
                        </tbody>
                    </table>

                <!-- PAGE CONTENT ENDS -->
            </div><!-- /.col -->
        </div><!-- /.row -->
{% endblock %}
{% block private_js %}
    <script src="{{ asset('assets/js/dataTables.tableTools.min.js') }}"></script>
    <script src="{{ asset('assets/js/dataTables.colVis.min.js') }}"></script>

{% endblock %}